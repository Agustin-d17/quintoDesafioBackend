html
    head 
        title Pug en mi proyecto
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous")
    body 
        h2 Ingrese el producto 
        section(class="m-5")
            form(action="/productos" method="post")
                div(class="mb-3")
                    label(for="title" class="form-label") Nombre del producto
                    input(type="text" class="form-control" id="title" name="title")


                div(class="mb-3")
                    label(for="price" class="form-label") Precio del producto
                    input(type="number" class="form-control" id="price" name="price")


                div(class="mb-3")
                    label(for="thumbnail" class="form-label") Url de la imagen
                    input(type="text" class="form-control" id="thumbnail" name="thumbnail")


                button(type="submit" class="btn btn-primary") Submit
                button(class="btn btn-secondary m-1")
                    a(class="nav-link active" href="http://localhost:3000/productos") Ver productos
